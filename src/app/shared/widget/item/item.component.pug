md-slider-container
  div
    span.md-body-1(ng-bind="::$ctrl.item.Name")
  md-slider(
    ng-model="$ctrl.value"
    ng-change="$ctrl.onChange($ctrl.value)"
    min="0" max="100" step="0.01"
    aria-label="{{::$ctrl.item.Name}}"
  )
  input(
    type="number"
    min="0" max="100" step="0.01"
    ng-model="$ctrl.value"
    ng-change="$ctrl.onChange($ctrl.value)"
    aria-label="{{::$ctrl.item.Name}}"
  )